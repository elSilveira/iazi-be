{
  "name": "iazi-api",
  "version": 2,
  "buildCommand": "cp new-fallback-server.js fallback-server.js && npm run build",
  "startCommand": "node railway-direct-starter.js",
  "healthcheckPath": "/api/health",
  "healthcheckTimeout": 60,
  "restartPolicyType": "ON_FAILURE",
  "restartPolicyMaxRetries": 5,
  "environments": {
    "production": {
      "healthcheck": {
        "path": "/api/health",
        "timeout": 60
      },
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 5,
      "deploymentStrategy": {
        "batchSize": 1,
        "minReadySeconds": 60
      }
    }
  }
}
